{% extends 'base.html.twig' %}

{% block title %}Save My Store - Ajouter une autre entreprise{% endblock %}

{% block customcss %}
<link rel="stylesheet" href="{{ asset('scss/registration.min.css') }}">
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

      {{ form_start(addPrestataireForm) }}
          <div class="card-body">
            <div class="cust-cont-center">
              <h2 class="cust-form-title">Add a new Service Society</h2>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                  {{ form_label(addPrestataireForm.nom_societe)}}
                    {{ form_widget(addPrestataireForm.nom_societe, { 'attr': {'class': 'form-control'} })}}
                </div>

                <div class="form-group col-md-3">
                    {{ form_label(addPrestataireForm.tel_societe)}}
                    {{ form_widget(addPrestataireForm.tel_societe, { 'attr': {'class': 'form-control'} })}}
                </div>
                <div class="form-group col-md-3">
                    {{ form_label(addPrestataireForm.email_societe)}}
                    {{ form_widget(addPrestataireForm.email_societe, { 'attr': {'class': 'form-control'} })}}
                </div>

                <div class="form-group col-md-3">
                  {{ form_label(addPrestataireForm.rue_societe)}}
                  {{ form_widget(addPrestataireForm.rue_societe, { 'attr': {'class': 'form-control'} })}}
                </div>
                <div class="form-group col-md-3">
                  {{ form_label(addPrestataireForm.immeuble_societe)}}
                  {{ form_widget(addPrestataireForm.immeuble_societe, { 'attr': {'class': 'form-control'} })}}
                </div>
                <div class="form-group col-md-3">
                  {{ form_label(addPrestataireForm.code_postal_societe)}}
                  {{ form_widget(addPrestataireForm.code_postal_societe, { 'attr': {'class': 'form-control'} })}}
                </div>
                <div class="form-group col-md-3">
                  {{ form_label(addPrestataireForm.quartier_societe)}}
                  {{ form_widget(addPrestataireForm.quartier_societe, { 'attr': {'class': 'form-control'} })}}
                </div>
                <div class="form-group col-md-3" >
                  {{ form_label(addPrestataireForm.tarif_societe)}}
                  {{ form_widget(addPrestataireForm.tarif_societe, { 'attr': {'class': 'form-control'} })}}
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-end">
            {{ form_widget(addPrestataireForm.submit)}}
          </div>
          {{ form_rest(addPrestataireForm) }}
        </form>
      </div>
    </div>
  </div>
    {{ form_end(addPrestataireForm) }}
{% endblock %}
