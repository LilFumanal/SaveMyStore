{% extends 'base.html.twig' %}

{% block title %} Same my store - Contact Form {% endblock %}

{% block customcss %}
<link rel="stylesheet" href="{{ asset('scss/registraion.min.css') }}">
{% endblock %}

{% block body %}

{{ form_start(contactForm) }}
<div class="container h-75 mb-4 mt-4">
    <div class="card">
        <div class="card-body">
          <div class="cust-cont-center">
            <h2 class="cust-form-title">How can we help you ?</h2>
          </div>
            <div class="d-flex flex-column align-items-center">
              <div class="form-group col-md-3">
                {{ form_label(contactForm.object)}}
                {{ form_widget(contactForm.object, { 'attr': {'class': 'form-control'} })}}
              </div>
              <div class="form-group col-md-3">
                {{ form_label(contactForm.email)}}
                {{ form_widget(contactForm.email, { 'attr': {'class': 'form-control'} })}}
              </div>
              <div class="form-group col-md-6">
                {{ form_label(contactForm.message)}}
                {{ form_widget(contactForm.message, { 'attr': {'class': 'form-control'} })}}
              </div>
            </div>
            <div class="d-flex justify-content-center">
              {{ form_widget(contactForm.submit)}}
          </div>
        </div>
    </div>
</div>
{{ form_end(contactForm) }}

{% endblock %}
