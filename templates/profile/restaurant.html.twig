{% extends 'base.html.twig' %}

{% block title %}{{ infosPatron[0].nom }}'s Profile{% endblock %}

{% block body %}

    <div class="container">
    <div class="jumbotron">

      <div class="row">
        {% for info in infosPatron %}
          <div class="col-md-3 col-xs-12 col-sm-6 col-lg-3">
            <div class="thumbnail text-center photo_view_postion_b" >
              <img src="http://dkextras.com/DK/images/profile/dfe29f0b7f57ca5cb982ac9b323ac975.jpg" alt="stack photo" class="img">
            </div>
          </div>
          <div class="col-md-9 col-xs-12 col-sm-6 col-lg-9">
              <div class="" style="border-bottom:1px solid black">
                <h2>{{ info.nom }} {{ info.prenom }}</h2>
              </div>
                <hr>
              <div class="col-md-8">
              <ul class="details">
                <li class="details-li"><span class="fas fa-mobile-alt" style="width:50px;"></span>{{ info.tel }}</li>
                <li class="details-li"><span class="far fa-envelope" style="width:50px;"></span>{{ info.email }}</li>
                <li class="details-li"><span class="fas fa-map-marker-alt" style="width:50px;"></span>{{ info.code_postal }}, {{ info.immeuble }}
                    , {{ info.rue }}</li>
              </ul>
              </div>
              <div class="d-flex">
                <a href="/profile/edit_profile_ro/{{ app.user.patronrestaurant.id }}" class="nav-link w-color">
                <button class="btn-custom ">Edit</button>
                </a>
                <a href="/profile/add_restaurant_ro/{{ app.user.patronrestaurant.id }}" class="nav-link w-color">
                <button class="btn-custom">Ajouter une entreprise</button>
                </a>
              </div>
          </div>
        </div>
        {% endfor %}
        <div class="row">
          <div class="form-group row">
            <div class="col-md-12">
            <div class="form-group" style="border-bottom:1px solid black">
                <h2>Restaurant Own</h2>
            </div>
            </div>
          </div>
        </div>
        <div class="row">
         <div class="col-md-4">
           {% for info in infosRestaurants %}

                   <div class="card">
                       <div class="card-body">
                           <p class="text-secondary mb-1">{{ info.camis }}</p>
                           <p class="text-secondary mb-1">{{ info.nom_resto }}</p>
                           <p class="text-secondary mb-1">{{ info.immeuble_resto }}</p>
                           <p class="text-secondary mb-1">{{ info.rue_resto }}</p>
                           <p class="text-secondary mb-1">{{ info.code_postal_resto }}</p>
                           <a href="/profile/restaurant_owner/{{ info.id_resto }}/missions" class="btn-custom">See the current missions</a>
                       </div>
                   </div>

           {% endfor %}
         </div>
        </div>

    </div>
</div>

{% endblock %}
